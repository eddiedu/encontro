{
    "name": "encontro",
    "version": "0.0.1",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "description": "Business Application",
    "dependencies": {
        "@sap/audit-logging": "^5",
        "@sap/cds": "^6.1",
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3",
        "debug": "^4.3",
        "express": "^4",
        "hdb": "^0.19",
        "passport": "^0.4.1"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.6",
        "sqlite3": "^5.0.2",
        "rimraf": "^3.0.2"
    },
    "sapux": [
        "app/fiori",
        "app/project1",
        "app/todo"
    ],
    "scripts": {
        "start": "cds run",
        "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-todo": "cds watch --open todo/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy encontro --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "build": {
            "target": "gen",
            "tasks": [
                {
                    "for": "hana",
                    "src": "db",
                    "options": {
                        "model": [
                            "db",
                            "app",
                            "srv"
                        ]
                    }
                },
                {
                    "for": "node-cf",
                    "src": "srv",
                    "options": {
                        "model": [
                            "db",
                            "app",
                            "srv"
                        ]
                    }
                }
            ]
        },
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "joe": {
                            "roles": [
                                "Admin",
                                "Viewer"
                            ]
                        },
                        "julie": {
                            "roles": [
                                "Viewer"
                            ]
                        },
                        "bob": {
                            "roles": [
                                "Viewer"
                            ]
                        }
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana-cloud"
                },
                "[development]": {
                    "kind": "sql"
                },
                "model": [
                    "db",
                    "srv"
                ]
            }
        }
    }
}